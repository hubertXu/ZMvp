<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/CardViewStyle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/iv_book_cover"
            android:layout_width="56dp"
            android:layout_height="64dp"
            android:layout_margin="8dp"
            android:src="@drawable/cover_default"
            />

        <TextView
            android:id="@+id/tv_book_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/iv_book_cover"
            android:layout_toRightOf="@id/iv_book_cover"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/sp_12"
            />

        <TextView
            android:id="@+id/tv_review_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_book_name"
            android:layout_below="@id/tv_book_name"
            android:paddingBottom="4dp"
            android:paddingRight="8dp"
            android:paddingTop="8dp"
            android:paddingLeft="0dp"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/body_14sp"
            />

        <Button
            android:id="@+id/btn_type_fine"
            android:layout_width="32dp"
            android:layout_height="16dp"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/iv_book_cover"
            android:layout_marginRight="8dp"
            android:background="@drawable/bg_2radius_gray"
            android:clickable="false"
            android:text="@string/fine"
            android:textColor="@color/white"
            android:textSize="@dimen/capition_10sp"
            android:visibility="gone"
            />

        <Button
            android:id="@+id/btn_type_hot"
            android:layout_width="32dp"
            android:layout_height="16dp"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/iv_book_cover"
            android:layout_marginRight="8dp"
            android:background="@drawable/bg_2radius_red"
            android:clickable="false"
            android:text="@string/hot"
            android:textColor="@color/white"
            android:textSize="@dimen/capition_10sp"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/tv_updated_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/iv_book_cover"
            android:paddingRight="8dp"
            android:paddingLeft="0dp"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/sp_12"
            />

        <TextView
            android:id="@+id/tv_helpless_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/tv_review_title"
            android:gravity="center"
            android:paddingBottom="4dp"
            android:paddingLeft="4dp"
            android:paddingRight="8dp"
            android:paddingTop="4dp"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/sp_12"/>

        <ImageView
            android:id="@+id/iv_helpfuless"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_alignBottom="@id/tv_helpless_count"
            android:layout_marginBottom="4dp"
            android:layout_toLeftOf="@id/tv_helpless_count"
            android:background="@drawable/ic_action_helpless"
            />

        <TextView
            android:id="@+id/tv_helpful_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tv_helpless_count"
            android:layout_toLeftOf="@id/iv_helpfuless"
            android:gravity="center"
            android:padding="4dp"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/sp_12"/>

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_alignBottom="@id/tv_helpless_count"
            android:layout_marginBottom="4dp"
            android:layout_toLeftOf="@id/tv_helpful_count"
            android:background="@drawable/ic_action_helpful"
            />
    </RelativeLayout>
</android.support.v7.widget.CardView>