<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <android.support.v4.widget.CircleImageView
        android:id="@+id/cv_avatar"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="8dp"
        android:src="@color/colorPrimary"
        />

    <TextView
        android:id="@+id/tv_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/cv_avatar"
        android:layout_marginLeft="12dp"
        android:layout_toRightOf="@id/cv_avatar"
        android:text="用户名"
        android:textSize="@dimen/sp_12"
        />

    <TextView
        android:id="@+id/tv_dsicuss_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_user_name"
        android:layout_below="@id/tv_user_name"
        android:layout_marginTop="8dp"
        android:text="啊啊啊啊啊啊啊"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/body_14sp"
        />

    <TextView
        android:id="@+id/tv_last_updated"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/cv_avatar"
        android:layout_marginRight="12dp"
        android:text="一小时前"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/sp_12"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_comment"
        android:text="2000000"
        android:gravity="center"
        android:layout_below="@+id/tv_dsicuss_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>
</RelativeLayout>