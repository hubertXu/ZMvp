<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/CardViewStyle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    app:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/cv_avatar"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="8dp"
            android:src="@color/colorPrimary"
            />

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/cv_avatar"
            android:layout_toRightOf="@id/cv_avatar"
            android:text="用户名"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/sp_12"
            />

        <TextView
            android:id="@+id/tv_discuss_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_user_name"
            android:layout_below="@id/tv_user_name"
            android:paddingBottom="4dp"
            android:paddingRight="8dp"
            android:paddingTop="8dp"
            android:text="啊啊啊啊啊啊啊"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/body_14sp"
            />

        <Button
            android:id="@+id/btn_type_fine"
            android:layout_width="32dp"
            android:layout_height="16dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/bg_2radius_gray"
            android:clickable="false"
            android:text="精品"
            android:textColor="@color/white"
            android:textSize="@dimen/capition_10sp"
            android:visibility="gone"
            />

        <Button
            android:id="@+id/btn_type_hot"
            android:layout_width="32dp"
            android:layout_height="16dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/bg_2radius_red"
            android:clickable="false"
            android:text="热门"
            android:textColor="@color/white"
            android:textSize="@dimen/capition_10sp"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/tv_updated_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/cv_avatar"
            android:paddingRight="8dp"
            android:text="一小时前"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/sp_12"
            />

        <TextView
            android:id="@+id/tv_comment_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/tv_discuss_content"
            android:gravity="center"
            android:paddingBottom="4dp"
            android:paddingLeft="4dp"
            android:paddingRight="8dp"
            android:paddingTop="4dp"
            android:text="0"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/sp_12"/>

        <ImageView
            android:id="@+id/iv_comment"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_alignBottom="@id/tv_comment_count"
            android:layout_marginBottom="4dp"
            android:layout_toLeftOf="@id/tv_comment_count"
            android:background="@drawable/ic_comment"
            />

        <TextView
            android:id="@+id/tv_like_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tv_comment_count"
            android:layout_toLeftOf="@id/iv_comment"
            android:gravity="center"
            android:padding="4dp"
            android:text="0"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/sp_12"/>

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_alignBottom="@id/tv_comment_count"
            android:layout_marginBottom="4dp"
            android:layout_toLeftOf="@id/tv_like_count"
            android:background="@drawable/ic_like"
            />
    </RelativeLayout>
</android.support.v7.widget.CardView>