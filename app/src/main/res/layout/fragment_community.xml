<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/gray"
              android:orientation="vertical"
    >

    <android.support.v7.widget.CardView
        android:id="@+id/card_complex_discuss"
        style="@style/CardViewStyle"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        app:cardCornerRadius="4dp"
        app:cardElevation="2dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/complex_discuss_area"
            android:textSize="@dimen/title_20sp"
            />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card_book_review"
        style="@style/CardViewStyle"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        app:cardCornerRadius="4dp"
        app:cardElevation="2dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/book_review_area"
            android:textSize="@dimen/title_20sp"
            />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card_book_shortage"
        style="@style/CardViewStyle"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        app:cardCornerRadius="4dp"
        app:cardElevation="2dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/book_shortage_area"
            android:textSize="@dimen/title_20sp"
            />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card_female"
        style="@style/CardViewStyle"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        app:cardCornerRadius="4dp"
        app:cardElevation="2dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/female_area"
            android:textSize="@dimen/title_20sp"
            />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card_original"
        style="@style/CardViewStyle"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        app:cardCornerRadius="4dp"
        app:cardElevation="2dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/original_area"
            android:textSize="@dimen/title_20sp"
            />
    </android.support.v7.widget.CardView>
</LinearLayout>